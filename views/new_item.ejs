<%- include('_header') %>

<section class="card narrow">
  <div class="section-head">
    <h2 class="section-title">Register New Item</h2>
    <a href="/dashboard" class="button btn-sm btn-outline">Back to Dashboard</a>
  </div>

  <form method="post" action="/items/new" enctype="multipart/form-data" class="dashboard-form">
    <label>Item name
      <input name="item_name" required placeholder="e.g. Blue Hydroflask, MacBook Pro" />
    </label>

    <label>Category
      <select name="category">
        <% categories.forEach((cat) => { %>
          <option value="<%= cat %>"><%= cat %></option>
        <% }) %>
      </select>
    </label>

    <label>Description <small class="field-note">(optional)</small>
      <textarea name="item_description" rows="3" placeholder="Color, brand, distinguishing marks..."></textarea>
    </label>

    <label>Photo <small class="field-note">(optional, max 5 MB)</small>
      <input type="file" name="image" accept="image/*" class="file-input-tight" />
    </label>

    <button type="submit">Generate QR Code</button>
  </form>
</section>

<%- include('_footer') %>
